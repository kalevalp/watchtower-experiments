service: wt-no-params

provider:
  name: aws
  runtime: nodejs8.10
  region: eu-west-1
  stage: test

functions:
  hello:
    handler: handler-tarry-post-wrapper.hello
    events:
      - http:
          path: microbmark
          method: get
    environment:
      WATCHTOWER_EVENT_KINESIS_STREAM:
        Ref: EventsStream
    role:
      'Fn::GetAtt': [ EventsStreamWriter, Arn ]



  ########################################
  ## Watchtower Functions
  ##
  ##
  ##   Log Ingestion Dummy
  watchtower-ingestion:
    handler: dummy-ingestion.handler
    events:
    - stream:
        arn:
          'Fn::GetAtt': [ EventsStream, Arn ]
        type: kinesis
        enabled: true
        startingPosition: TRIM_HORIZON
  ##
  ## END of Watchtower Functions
  ########################################


resources:
  Resources:
    ########################################
    ## Watchtower Resources
    ##
    ##
    ##   Events Kinesis Stream
    EventsStream:
      Type: 'AWS::Kinesis::Stream'
      Properties:
        Name: Watchtower${self:provider.stage}EventsStream
        ShardCount: 10
    ##
    ## Event Kinesis Stream Writer Role
    EventsStreamWriter:
      Type: AWS::IAM::Role
      Properties:
        Path: /
        RoleName: ${self:provider.stage}EventsStreamWriter
        AssumeRolePolicyDocument:
          Version: '2012-10-17'
          Statement:
            - Effect: Allow
              Action: sts:AssumeRole
              Principal:
                Service: lambda.amazonaws.com
        ManagedPolicyArns:
          - arn:aws:iam::aws:policy/AdministratorAccess
        Policies:
          - PolicyName: WriteToStream
            PolicyDocument:
              Version: '2012-10-17'
              Statement:
                -  Effect: Allow
                   Action:
                     - 'kinesis:DescribeStream'
                     - 'kinesis:PutRecord'
                     - 'kinesis:PutRecords'
                   Resource:
                     Fn::GetAtt: [EventsStream, Arn]
    ##
    ## END of Watchtower Resources
    ########################################
